{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "space-in-parens": ["error", "always"],
        "jsx-quotes": ["error", "prefer-double"],
        "no-console": ["error", { "allow": ["error"] }],

        "react/jsx-curly-spacing": ["error", "always"],
        "react/prop-types": "off"
    }
}